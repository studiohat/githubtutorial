<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationCheckActivity"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/reservation_check_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좌석 번호 : "
        android:textSize="20sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/reservation_check_arrive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도착 예정 시각 : "
        android:textSize="20sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/reservation_check_reserve_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 시간 : "
        android:textSize="20sp"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/reservation_check_rest_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴식 시간 : "
        android:textSize="20sp"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100sp">

        <Button
            android:id="@+id/reservation_check_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자리 도착"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/reservation_check_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 종료"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>